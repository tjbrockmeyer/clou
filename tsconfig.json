{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}